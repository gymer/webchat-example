<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-signin"}) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <% resource.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <h2 class="form-signin-heading">Sign up</h2>

  <div class="field first">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>

  <div class="field first">
    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
  </div>

  <div class="field last">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>

    <%= render "devise/shared/links" %>
  </div>
<% end %>

